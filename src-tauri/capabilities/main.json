{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capabilities for the app window",
  "windows": [
    "main",
    "settings",
    "cover-art-settings",
    "library-view-settings",
    "metadata-view-settings",
    "player-settings",
    "track-list-settings",
    "track-list-columns",
    "console-settings",
    "console"
  ],
  "permissions": [
    "core:window:allow-start-dragging",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "core:window:allow-hide",
    "core:webview:allow-webview-show",
    "core:webview:allow-webview-hide",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "/**"
        }
      ]
    },
    "notification:default",
    "os:allow-platform",
    "os:allow-arch",
    "os:allow-family",
    "os:allow-version",
    "os:allow-locale",
    "fs:allow-document-read",
    "fs:allow-document-write",
    "fs:scope-download-recursive",
    "store:default",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "fs:allow-exists",
    "sql:default",
    "sql:allow-execute",
    "drag:allow-start-drag",
    "drag:default",
    "dialog:default",
    "stronghold:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://ws.audioscrobbler.com/**"
        },
        {
          "url": "https://ws.audioscrobbler.com/**"
        }
      ]
    },
    "system-fonts:default",
    "http:default"
  ]
}
